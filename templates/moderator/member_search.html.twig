{% extends 'base.html.twig' %}

{% block title %}TPOTDR | SEARCH MEMBERS{% endblock %}

{% block body %}
    <div class="row wrapper text-center">
        <div class="col-1"></div>
        <div class="col-10 d-flex align-items-center flex-column">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    {{ form_errors(searchForm) }}

                    {{ form_start(searchForm) }}
                    {{ form_row(searchForm.username) }}
                    {{ form_row(searchForm.submit, {
                        label: 'Search',
                        'attr': {
                            'class': 'fs-4 mt-3 bg-darkgreen text-gold'
                        },
                    }) }}

                    {{ form_end(searchForm) }}
                    {{ form_start(searchAllForm) }}
                    {{ form_row(searchAllForm.search_all, {
                        'attr': {
                            'class': 'fs-2 mt-5 bg-darkgreen text-gold',
                        },
                    }) }}
                    {{ form_end(searchAllForm) }}
                </div>
                <div class="col-2"></div>
            </div>
            <hr class="border border-dark border-4 opacity-75 w-100">
            <select class="form-select form-select-md w-25" aria-label="User select">
                <option selected>No selected</option>
                <hr>
                <hr>
                <hr>
                {% for user in users %}
                    {% set name = user.username %}
                    <option value="{{ name }}">{{ name }}</option>
                    <hr>
                {% endfor %}
            </select>
        </div>
        <div class="col-1"></div>
    </div>
{% endblock %}