{% extends 'base.html.twig' %}

{% block title %}TPOTDR | SEARCH MEMBERS{% endblock %}

{% block body %}
    <div class="row wrapper text-center">
        <div class="col-1"></div>
        <div class="col-10">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">

                </div>
                <div class="col-2"></div>
            </div>
            <select name="users">
                {% for user in users %}
                    {% set name = { user.username } %}
                    <option value="{{ name }}">{{ name }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="col-1"></div>
    </div>
{% endblock %}