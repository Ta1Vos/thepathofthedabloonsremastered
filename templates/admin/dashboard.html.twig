{% extends 'base.html.twig' %}

{% block title %}TPOTDR | Creator Dashboard{% endblock %}
{% set bannerTitle = "TPOTDR | ADMIN " ~ app.user.username %}

{% block body %}
    <div class="row wrapper text-center">
        <div class="col-1"></div>
        <div class="col-10">
            <div class="row d-flex align-items-baseline">
                <div class="col-2">
                    <img class="img-fluid" src="{{ asset('img/logos/Dabloon.jpg') }}" alt="dabloon image">
                </div>
                <div class="col-8">
                    <div class="title-text text-gold fs-1 fm-courier">
                        {{ bannerTitle }}
                    </div>
                </div>
                <div class="col-2">
                    <img class="img-fluid" src="{{ asset('img/logos/Dabloon.jpg') }}" alt="dabloon image">
                </div>
            </div>
            <div class="my-5">&nbsp;</div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-5">
                    <a class="start-button w-100 btn py-4 fs-1 bg-lightgreen border border-5 border-black rounded-5 fm-courier fw-bolder"
                       href="{{ path("app_admin_dashboard_dialogues") }}">
                        Dialogue Editor
                    </a>
                </div>
                <div class="col-5">
                    <a class="start-button w-100 btn py-4 fs-1 bg-lightgreen border border-5 border-black rounded-5 fm-courier fw-bolder"
                       href="{{ path("app_admin_dashboard_events")  }}">
                        Event Editor
                    </a>
                </div>
                <div class="col-1"></div>
            </div>
            <a class="start-button w-50 btn py-4 fs-1 bg-lightgreen border border-5 border-black rounded-5 fm-courier fw-bolder"
               href="{{ path("app_admin_dashboard_items")  }}">
                Item Editor
            </a>
            <a class="start-button w-50 btn py-4 fs-1 bg-lightgreen border border-5 border-black rounded-5 fm-courier fw-bolder"
               href="{{ path("app_admin_dashboard_effects")  }}">
                Effect Editor
            </a>
            <a class="start-button w-50 disabled btn py-4 fs-1 bg-lightgreen border border-5 border-black rounded-5 fm-courier fw-bolder"
               href="{{ path("app_admin_dashboard")  }}">
                Quest Editor
            </a>
        </div>
        <div class="col-1"></div>
    </div>
{% endblock %}