{% extends 'base.html.twig' %}

{% block title %}TPOTDR | Dialogue Editor{% endblock %}

{% block body %}
    <div class="row wrapper text-center">
    <div class="col-1"></div>
    <div class="col-10 fs-3">
        {{ form(createBtn) }}
        <div class="my-3">&nbsp;</div>
        {% if dialogues is not defined or dialogues|length <= 0 %}
        <span class="text-danger fs-3">Nothing to see here but us chickens</span>
        {% elseif dialogues|length > 0 %}
        {% for dialogue in dialogues %}
        {% if dialogue.id % 2 == 1 %}
        <div class="row bg-lightolive border border-black border-1">
            {% else %}
            <div class="row bg-lightgreen border border-black border-1">
                {% endif %}
                <div class="col-6">
                    {{ dialogue.name }}
                </div>
                <div class="col-3">
                    Edit
                </div>
                <div class="col-3">
                    Delete
                </div>
            </div>
            {% endfor %}
            {% endif %}
        </div>
        <div class="col-1"></div>
    </div>
{% endblock %}