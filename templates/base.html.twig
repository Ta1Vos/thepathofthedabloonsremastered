{% include("./nav.html.twig") %}
{% if bannerTitle is not defined %}
    {% set bannerTitle = "The Path Of The Dabloons Remastered" %}
{% endif %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}TPOTDR!{% endblock %}</title>
    <link rel="icon" type="image/jpg" href="{{ asset('img/logos/Dabloon.jpg') }}"/>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body class="bg-mint">
{# read and display all flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show flash-{{ label }}" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}
{% block nav %}{% endblock %}
{% block banner %}
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <div class="row d-flex align-items-baseline">
                <div class="col-2">
                    <img class="img-fluid" src="{{ asset('img/logos/Dabloon.jpg') }}" alt="dabloon image">
                </div>
                <div class="col-8">
                    <div class="title-text text-gold fs-1 fm-courier">
                        {{ bannerTitle }}
                    </div>
                </div>
                <div class="col-2 text-end">
                    <img class="img-fluid" src="{{ asset('img/logos/Dabloon.jpg') }}" alt="dabloon image">
                </div>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
    {% if overrideTitleMargin is not defined %}
        <div class="my-5">&nbsp;</div>
    {% endif %}
{% endblock %}
{% block body %}

{% endblock %}
</body>
</html>
